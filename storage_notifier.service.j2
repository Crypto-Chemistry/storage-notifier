[Unit]
Description=Storage Notifier Service

[Service]
Type=simple
ExecStart={{user_dir}}/storage_notifier/storage_notifier.sh \
            -n "{{hostname}}" \
            -b "{{storage_notifier_bot_name}}" \
            -w "{{discord_webhook}}" \
            -p "{{percent_used}}" \
            -d "{{devices}}" \
            -u "{{discord_uuid}}"

[Install]
WantedBy=default.target